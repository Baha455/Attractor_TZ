<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.FirstFragment">

   <ImageView
       android:id="@+id/image"
       android:layout_width="200dp"
       android:layout_height="200dp"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       android:layout_margin="15dp"/>

   <TextView
       android:id="@+id/tv_name"
       style="@style/TextView"
       android:text="@string/name"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@id/image" />

   <TextView
      android:id="@+id/name"
       style="@style/TextViewForData"
      app:layout_constraintTop_toBottomOf="@id/tv_name"
       android:text="Baha"
       app:layout_constraintStart_toStartOf="parent" />

   <TextView
      android:id="@+id/tv_second_name"
      android:text="@string/secondName"
       app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/name"
       style="@style/TextView"/>

   <TextView
       android:id="@+id/second_name"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Sultanov"
      app:layout_constraintTop_toBottomOf="@id/tv_second_name"
       style="@style/TextViewForData"
     />

   <TextView
      android:id="@+id/tv_education"
      app:layout_constraintStart_toStartOf="parent"
       android:text="@string/education"
       style="@style/TextView"
       app:layout_constraintTop_toBottomOf="@id/second_name"/>

   <TextView
       android:id="@+id/education"
       style="@style/TextViewForData"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/tv_education"
      android:text="Айбанство"/>

   <TextView
       android:id="@+id/tv_company"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="parent"
      style="@style/TextView"
       android:gravity="center"
      app:layout_constraintTop_toBottomOf="@id/education"
      android:text="Компания"/>

   <TextView
      android:id="@+id/tv_company_name"
      style="@style/TextView"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/tv_company"
      android:text="@string/company_name"/>

   <TextView
      android:id="@+id/company_name"
       style="@style/TextViewForData"
      app:layout_constraintTop_toBottomOf="@id/tv_company_name"
      android:text="cringe"
      app:layout_constraintStart_toStartOf="parent"/>

   <TextView
      android:id="@+id/tv_position"
       style="@style/TextView"
      android:text="@string/position"
       app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/company_name"/>

   <TextView
      android:id="@+id/position"
       style="@style/TextViewForData"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/tv_position"
      android:text="Лох"/>

   <Button
      android:id="@+id/btnNext"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/position"
      android:text="NextActivity"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>